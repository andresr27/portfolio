#Andres Renaud 2014-2017
#:kivy 1.9
#:set left_marg 100
#:set bot_marg 90
#:set inter_button_height 40
#:set button_height 147
#:set button_width 500
#:set left_margin_info 100
#:set button_info_height 226
#:set button_info_width 226
#:set info_height 635
#:set info_width 1130

<StartScreen>:
    name: "start"
    canvas.before:
        Color:
            rgba: 0,0,0,1 
        Rectangle:
            id:bck
            pos: 0,0
            size: 1920,1080
    info_0: info_0
    info_1: info_1
    info_2: info_2
    info_3: info_3
    info_4: info_4

    Label:
        id:money_count
        text_size: 600,200 #self.size
        font_size: 28          
        center_x: -450
        top: -300
        text:'La expendedora no está disponible'
        #color:1,1,1,1

    FloatLayout:
        Button:
            background_normal: 'imagenes/logo3.png'
            background_down: 'imagenes/logo3.png'
            allow_stretch: 1
            min_state_time: 2.0
            size_hint: None, None
            width : 600
            height : 444
            pos: left_marg-60, 1080-410

    FloatLayout:
#        size: 500, 147
        Button:
            id:but_0
            name:"button0"
            background_normal: 'imagenes/boton-protectores.png'
            background_down: 'imagenes/boton-protectores.png'
            allow_stretch: 1
            on_press: root.buttonHandle(self,0)
            min_state_time: 2.0
            size_hint: None, None #0.176 0.1205 antes, 0.295, 0.079 en la flecha     0.305, 0.1305
            width : button_width
            height : button_height
            pos: left_marg, bot_marg + 2*button_height + 2*inter_button_height

    FloatLayout:
#        size: 500, 147
        Button:
            id:but_2
            name:"button2"
            allow_stretch: 1
            background_normal: 'imagenes/boton-toallas.png'
            background_down: 'imagenes/boton-toallas.png'
            on_press: root.buttonHandle(self,2)
            min_state_time: 2.0
            size_hint: None, None
            width : button_width
            height : button_height
            pos: left_marg, bot_marg + 1*button_height + 1*inter_button_height

    FloatLayout:
#        size: 500, 147
        Button:
            id:but_1
            name:"button1"
            allow_stretch: 1
            background_normal: 'imagenes/boton-tampon.png'
            background_down: 'imagenes/boton-tampon.png'
            on_press: root.buttonHandle(self,1)
            min_state_time: 2.0
            size_hint: None, None
            width : button_width
            height : button_height
            pos: left_marg, bot_marg

